@model IEnumerable<DRCTS.Models.ApplicationAccountsResult>

@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Create User test", "CreateUser")
</p>
<div id="users_div" class="panel-body">
    <div class="table-responsive">

        <table id="MyTablee" class="MyTable table table-striped table-bordered table-hover largeTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Last Name")
                    </th>
                    <th>
                        @Html.DisplayName("First Name")
                    </th>
                    <th>
                       @Html.DisplayName("User Name")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th>
                       Last Access
                    </th>
                    <th>
                       Locked
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            
                            @Html.DisplayFor(modelItem => item.LastAccess)
                        </td>
                        <td>
                            @if(item.LockoutEndDateUtc > DateTime.UtcNow)
                            {
                                @Html.ActionLink("Unlock User", "UnlockUser", new { id = item.Id })
                            }
                            else
                            {
                                @Html.ActionLink("Lock User", "LockUser", new { id = item.Id })
                            }
                           
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
                </tbody>
</table>
       
        </div>
    </div>

